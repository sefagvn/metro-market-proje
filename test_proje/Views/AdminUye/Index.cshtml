            <th>
                @*@Html.DisplayNameFor(model => model.soyadi)*@
                <span>Soyadı</span>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.yetki.yetki1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kullaniciAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sifre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soyadi)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.uyeId }) |
                    @*@Html.ActionLink("Details", "Details", new { id=item.uyeId }) |*@
                    @Html.ActionLink("Sil", "Delete", new { id = item.uyeId })
                </td>
            </tr>
        }

    </table>

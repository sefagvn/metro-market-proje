@model IEnumerable<test_proje.Models.uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <h2>Üyeler</h2>

    <p>
        @Html.ActionLink("Yeni Üye", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.yetki.yetki1)*@
                <span>Yetki Id</span>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.kullaniciAdi)*@
